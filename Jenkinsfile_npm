pipeline {
    agent any
    tools {
        maven 'maven'
        jdk 'jdk8'
        //nodejs "node"
    }
    stages {
        stage ('Initialize') {
            steps {
                sh '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
                '''
            }
        }

        stage ('Build') {
            steps {
                sh 'mvn test || true'
                //sh 'npm install -g railflow'
                //sh 'railflow --version'
            }
            post {
                always {
                    junit 'target/surefire-reports/**/*.xml' 
                    archiveArtifacts "target/surefire-reports/emailable-report.html"
                    archiveArtifacts "target/surefire-reports/testng-reports.css"
                }
            }
        }
    }
}
